<%# app/views/users/sessions/new.html.erb %>
<%# application.html.erb の <main> の中でこれが描画される %>

<%# ログインフォーム専用の全画面中央寄せコンテナ %>
<div class="min-h-[calc(100vh-10rem)] flex flex-col items-center justify-center -mx-5 -mt-8 -mb-8"> <%# 親のpaddingやmarginを打ち消す工夫 %>

  <%# 上部: 白い背景のコンテンツエリア (フォームを中央に配置) %>
  <div class="w-full flex-grow flex flex-col items-center justify-center bg-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-sm w-full space-y-8 p-10 rounded-xl shadow-md"> <%# フォームの白いカード %>
      <div>
        <h2 class="text-center text-4xl font-bold text-purple-700 mb-8">
          ログイン
        </h2>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" /><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" /></svg>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "appearance-none block w-full pl-10 pr-3 py-3 border-b-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-sm", placeholder: "メールアドレス" %>
          </div>
        </div>

        <div>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true"><path fill-rule="evenodd" d="M18 8a6 6 0 01-7.743 5.743L10 14l-1 1-1 1H6v2H2v-4l4.257-4.257A6 6 0 1118 8zm-6-4a1 1 0 100 2 2 2 0 012 2 1 1 0 102 0 4 4 0 00-4-4z" clip-rule="evenodd" /></svg>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", required: true, class: "appearance-none block w-full pl-10 pr-3 py-3 border-b-2 border-gray-300 placeholder-gray-400 text-gray-900 focus:outline-none focus:ring-purple-500 focus:border-purple-500 sm:text-sm", placeholder: "パスワード（8文字以上）" %>
          </div>
        </div>

        <div class="text-right text-sm mt-4">
          <%#= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "font-medium text-purple-600 hover:text-purple-500" %>
        </div>

        <div>
          <%= f.submit "ログイン", class: "w-full flex justify-center py-3 px-4 border border-transparent text-lg font-semibold rounded-md text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 mt-6" %>
        </div>
      <% end %>

      <div class="mt-8 text-center text-sm">
        アカウントをお持ちでない場合
        <%= link_to "新規登録", new_registration_path(resource_name), class: "font-medium text-purple-600 hover:text-purple-500" %>
      </div>
    </div>
  </div>

  <%# 下部: 紫色の背景エリア (固定の高さで) %>
  <div class="h-48 bg-purple-700 w-full"> <%# w-full を追加して横幅いっぱいに %>
    <%# ここに波模様のSVGなどを配置する %>
  </div>
</div>